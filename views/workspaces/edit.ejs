
<div class="container" id="editpage">
  <div class="page-header">
    <h1>Edit. <small>Edit your workspace...</small></h1>
  </div>
  <form method="post"  action="/workspaces/<%= workspace._id %>">
    <input type="hidden" name="_method" value="put">
    <div class="form-group">
      <label for="name">Name</label>
      <input class="form-control" type="text" id="name" name="name" value="<%= workspace.name %>">
    </div>
    <div class="form-group">
      <label for="website">Website</label>
      <input class="form-control" type="text" id="website" name="website" value="<%= workspace.website %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description"><%= workspace.description %></textarea>
    </div
    <div class="form-group">
      <label for="image" class="col-2 col-form-label">Image</label>
      <div class="col-10">
      <textarea class="image" name="image"></textarea>
    </div>
    <div class="form-group">
      <input type="submit" value="Submit">
    </div>
  </form>
</div>
