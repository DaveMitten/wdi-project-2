<div class="page-header centered">
  <h1>Edit. <small>Edit your workspace...</small></h1>
</div>
<form method="post" class="centered" action="/workspaces/<%= workspace._id %>">
  <input type="hidden" name="_method" value="put">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="<%= workspace.name %>">

  <label for="website">Website</label>
  <input type="text" id="website" name="website" value="<%= workspace.website %>">

  <label for="description">Description</label>
  <textarea id="description" name="description"><%= workspace.description %></textarea>
<%#
  <label for="location">Location</label>
  <input type="text" id="location" name="location">%>



  <input type="submit" value="Submit">
</form>
